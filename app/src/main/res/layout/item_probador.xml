<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_weight="0"
        android:src="@drawable/sudadera1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:scaleType="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sudadera champion azul marino 2019"
            android:textSize="40sp"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/nombre_marca"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="Champion"
            android:textSize="27sp"
            android:textColor="#000000"
            android:gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Talla: M"
                android:textSize="27sp"

                android:textColor="#000000"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:orientation="horizontal"
                android:layout_weight="3">
                <TextView
                    android:id="@+id/color_prenda"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Color: Azul marino"
                    android:textSize="27sp"
                    android:gravity="left"
                    android:textColor="#000000"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="center"
                    android:src="@drawable/color_azul_marino"

                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:text="39,90 â‚¬"
        android:textColor="#000000"
        android:textSize="30sp"
        android:gravity="center"

        />
</LinearLayout>