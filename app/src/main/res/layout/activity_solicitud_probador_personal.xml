<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202F3F"
    tools:context=".SolicitudProbadorPersonal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imagenCampana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/icono_notificacion"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/texto_solicitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="Probador3 quiere probrar"
        android:textColor="#FFFFFFFF"
        android:gravity="center"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_solicitudProbadorPersonal"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_height="275dp"
        android:layout_gravity="center"></android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:text="Introduzca el tiempo estimado de espera (en segundos):"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/tiempo_para_llevarle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:layout_marginRight="20dp"
            android:hint="60"
            android:textSize="50sp"
            android:textColor="@color/solidBlue"
            android:gravity="center"
            android:layout_weight="3"/>
        <ImageButton
            android:id="@+id/boton_introducir_tiempo"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:layout_height="wrap_content"
            android:src="@drawable/boton_enviar"
            android:padding="0dp"/>
    </LinearLayout>
</android.widget.LinearLayout>