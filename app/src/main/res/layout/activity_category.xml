<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <include
        layout="@layout/header_toolbar"
        android:id="@+id/toolbar_products"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="166dp"
        android:layout_height="43dp"
        android:text="CategorÃ­as"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="215dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/straight_fit_vaqueros_levis" />
            <Button
                android:id="@+id/button"
                android:layout_width="146dp"
                android:layout_height="52dp"
                android:background="#FFFFFF"
                android:text="Pantalones"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"/>
            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/zapatos" />
            <Button
                android:id="@+id/button8"
                android:layout_width="146dp"
                android:layout_height="52dp"
                android:background="#FFFFFF"
                android:text="Zapatos"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:layout_marginRight="215dp">
            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/jerseys" />
            <Button
                android:id="@+id/button2"
                android:layout_width="146dp"
                android:layout_height="52dp"
                android:background="#FFFFFF"
                android:text="Jerseys"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"/>
            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/accesorios" />
            <Button
                android:id="@+id/button9"
                android:layout_width="146dp"
                android:layout_height="52dp"
                android:background="#FFFFFF"
                android:text="Accesorios"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_marginTop="5dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/abrigos" />
            <Button
                android:id="@+id/button7"
                android:layout_width="146dp"
                android:layout_height="52dp"
                android:background="#FFFFFF"
                android:text="Abrigos"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"/>
            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/oferta_especial" />
            <Button
                android:id="@+id/button10"
                android:layout_width="146dp"
                android:layout_height="52dp"
                android:background="#FFFFFF"
                android:text="Ofertas"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_marginTop="5dp"  />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>