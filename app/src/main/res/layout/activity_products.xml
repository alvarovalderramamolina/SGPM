<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Products">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="89dp"
        android:layout_height="32dp"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="9dp"
        android:text="Menor a mayor precio"
        android:textColor="#202F3F"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        tools:layout_editor_absoluteX="1096dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="108dp"
        android:layout_height="23dp"
        android:layout_marginTop="66dp"
        android:text="Mejor valorado"
        android:textColor="#202F3F"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        tools:layout_editor_absoluteX="975dp" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="1279dp"
        android:layout_height="85dp"
        android:background="#E2E2E2"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageButton
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E2E2E2"
            android:src="@drawable/volver"
            android:tint="#202F3F"
            android:translationX="5dp"
            android:translationY="5dp"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/boton_cesta"
            android:translationX="-8dp"
            android:translationY="10dp"
            app:layout_column="3"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/boton_probador"
            android:translationY="10dp"
            app:layout_column="4"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_negro"
            android:translationX="300dp"
            android:translationY="15dp"
            app:layout_column="1"
            app:layout_row="0" />

    </android.support.v7.widget.GridLayout>

    <EditText
        android:id="@+id/editText"
        android:layout_width="1138dp"
        android:layout_height="44dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="605dp"
        android:ems="10"
        android:hint="Buscar por nombre de producto o marca"
        android:inputType="textPersonName"
        android:textColor="#070606"
        android:textColorHint="#E2E2E2"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView14"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="79dp"
        android:layout_marginBottom="613dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/iconobuscar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="108dp"
        android:layout_height="23dp"
        android:layout_marginTop="66dp"
        android:text="MÃ¡s destacado"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#202F3F"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        tools:layout_editor_absoluteX="850dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="137dp" />


</android.support.constraint.ConstraintLayout>