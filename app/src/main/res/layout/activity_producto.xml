<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <include
        layout="@layout/cabecera"
        android:id="@+id/toolbar_products"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp">
        <ImageView
            android:id="@+id/imagen"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sudadera1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="50dp">
            <TextView
                android:id="@+id/nombreprod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Champion's Graphic Crew B Sudadera para Hombre"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:id="@+id/marcaprod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Levis"
                android:layout_marginBottom="15dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp">

                <RatingBar
                    android:id="@+id/estrellasprod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4" />

                <TextView
                    android:id="@+id/rating_amount_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="531 valoraciones en Amazon.com"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">
                <TextView
                    android:id="@+id/price_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70,00â‚¬"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="@dimen/default_gap"/>
                <TextView
                    android:id="@+id/availability_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disponible"
                    android:textColor="@color/solidGreen"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="50dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:text="Talla:"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:layout_marginBottom="10dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp">
                        <TextView
                            android:id="@+id/talla_S"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S"
                            android:textColor="@color/black"
                            android:layout_marginRight="20dp"/>
                        <TextView
                            android:id="@+id/talla_M"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="M"
                            android:textColor="@color/black"
                            android:layout_marginRight="20dp"/>
                        <TextView
                            android:id="@+id/talla_L"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="L"
                            android:textColor="@color/black"
                            android:layout_marginRight="20dp"/>
                        <TextView
                            android:id="@+id/talla_XL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="XL"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Color:"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="10dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/azul"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_marginRight="20dp">
                            <LinearLayout
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@color/solidBlue"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Azul"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/negro"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_marginRight="20dp">
                            <LinearLayout
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@color/black"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Negro"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/rojo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_marginRight="20dp">
                            <LinearLayout
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@color/solidRed"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rojo"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/gris"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_marginRight="20dp">
                            <LinearLayout
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@color/solidGrey"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gris"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/naranja"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_marginRight="20dp">
                            <LinearLayout
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@color/solidOrange"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Naranja"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/add_item_probador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/boton_aniadir_probador"
                    android:background="@color/white"
                    android:layout_marginRight="50dp"/>
                <ImageButton
                    android:id="@+id/add_item_cesta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/boton_aniadir_cesta"
                    android:background="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_marginLeft="30dp"
        android:paddingTop="25dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vista previa"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginBottom="15dp"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/imagen_no_disponible_svg"
                android:layout_marginRight="25dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:gravity="start">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Este producto combina muy bien con estos otros"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginBottom="15dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/tommy_accesorio"
                    android:layout_marginRight="25dp"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/salomon_calzado"
                    android:layout_marginRight="25dp"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/cargo_jeans"
                    android:layout_marginRight="25dp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>