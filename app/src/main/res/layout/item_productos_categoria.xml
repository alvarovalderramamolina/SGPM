<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/linear_elemento">

    <ImageView
        android:id="@+id/ivItem"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/default_gap"
        android:layout_marginRight="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/zapatos" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:rowCount="2"
                android:useDefaultMargins="true"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/name_item"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:text="Zapatos cuero marrones"
                    android:textSize="35sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/brand_item"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:text="Martinelli"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    />
            </GridLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
                <RatingBar
                    android:id="@+id/rating_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4"
                    android:isIndicator="true"
                    android:theme="@style/RatingBar"/>
                <TextView
                    android:id="@+id/rating_amount_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="531 valoraciones en Amazon.com"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
                <TextView
                    android:id="@+id/price_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70,00â‚¬"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="@dimen/default_gap"/>
                <TextView
                    android:id="@+id/availability_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disponible"
                    android:textColor="@color/solidGreen"
                    android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>