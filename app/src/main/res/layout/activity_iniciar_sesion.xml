<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202F3F"
    tools:context=".InicioSesion"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="290dp"
        android:layout_height="110dp"
        android:background="@android:color/transparent"
        android:tint="#FFFFFF"
        app:srcCompat="@drawable/boton_volver"
        android:layout_gravity="left"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="255dp"
            android:layout_height="119dp"
            android:layout_marginBottom="75dp"
            app:srcCompat="@drawable/logo_blanco" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/textView"
                android:layout_width="344dp"
                android:layout_height="39dp"
                android:layout_marginBottom="20dp"
                android:text="*Todos los campos son obligatorios"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="561dp"
                android:layout_height="99dp"
                android:background="#FFFFFF"
                android:clickable="true"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="Correo electr칩nico"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#6E6E6E"
                android:textSize="35sp"
                android:drawablePadding="25dp"
                android:paddingLeft="20dp"
                android:layout_marginBottom="20dp"/>

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="561dp"
                android:layout_height="99dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Contrase침a"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#6E6E6E"
                android:textIsSelectable="true"
                android:textSize="35sp"
                android:drawablePadding="25dp"
                android:paddingLeft="20dp"
                android:layout_marginBottom="20dp"/>


            <Button
                android:id="@+id/initSesion"
                android:layout_width="561dp"
                android:layout_height="99dp"
                android:background="#F79C33"
                android:text="Iniciar sesi칩n"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="#202F3F "
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="Iniciar sesi칩n" />
    </LinearLayout>


    </LinearLayout>

</LinearLayout>