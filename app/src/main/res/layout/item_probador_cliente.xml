<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageButton
        android:id="@+id/papelera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/icono_papelera"
        android:layout_marginLeft="20dp"
        android:background="@android:color/transparent"/>
    <ImageView
        android:id="@+id/ivItem"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_weight="0"
        android:src="@drawable/sudadera1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:scaleType="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sudadera champion azul marino 2019"
            android:textSize="40sp"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/brand_item"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="Champion"
            android:textSize="27sp"
            android:textColor="#000000"
            android:gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Talla: "
                android:textSize="27sp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/talla_prenda"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="M"
                android:textStyle="bold"
                android:textSize="27sp"
                android:textColor="#000000"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Color: "
                    android:textSize="27sp"
                    android:gravity="left"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/color_texto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Azul"
                    android:textStyle="bold"
                    android:textSize="27sp"
                    android:gravity="left"
                    android:textColor="#000000"/>
                <ImageView
                    android:id="@+id/color_cuadrado"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="center"
                    android:background="@color/solidBlue"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/price_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:text="39,90 â‚¬"
        android:textColor="#000000"
        android:textSize="30sp"
        android:gravity="center"

        />
    <ImageButton
        android:id="@+id/add_item_cesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/icono_aniadir_cesta"
        android:layout_marginLeft="20dp"
        android:background="@android:color/transparent"/>
</LinearLayout>