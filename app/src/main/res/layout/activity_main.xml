<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202F3F"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="255dp"
        android:layout_height="119dp"
        android:layout_marginBottom="150dp"
        app:srcCompat="@drawable/logo_blanco" />

    <Button
        android:id="@+id/zonaClientesButton"
        android:layout_width="350dp"
        android:padding="20dp"
        android:layout_height="75dp"
        android:background="#F79C33"
        android:layout_marginVertical="10dp"
        android:text="Zona de clientes"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:drawableLeft="@drawable/icono_llave"
        />

    <Button
        android:id="@+id/invitadoButton"
        android:layout_width="350dp"
        android:padding="20dp"
        android:layout_height="75dp"
        android:background="#E2E2E2"
        android:layout_marginVertical="10dp"
        android:text="Continuar como invitado"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:drawableLeft="@drawable/icono_invitado"/>

    <Button
        android:id="@+id/crearCuentaButton"
        android:layout_width="350dp"
        android:padding="20dp"
        android:layout_height="75dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="50dp"
        android:text="Crear cuenta de cliente"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="#FFFFFF"
        android:drawableLeft="@drawable/icono_registrarse" />

    <Button
        android:id="@+id/accesoPersonalButton"
        android:layout_width="350dp"
        android:padding="20dp"

        android:layout_marginTop="20dp"
        android:layout_height="75dp"
        android:background="@android:color/transparent"
        android:text="Acceso al personal"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="#FFFFFF"
        android:drawableLeft="@drawable/icono_personal"/>

</LinearLayout>